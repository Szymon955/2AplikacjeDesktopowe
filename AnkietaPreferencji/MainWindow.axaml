<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AnkietaPreferencji.MainWindow"
        Title="AnkietaPreferencji" Height="350" Width="400">
        
        
        
        <StackPanel Margin="10">
                
                <TextBlock Text="Podaj imie:"></TextBlock>
                <TextBox Width="" Name="Nametextbox"></TextBox>
                
                <TextBlock Text="Wybierz kategorie zainteresowan:"></TextBlock>
                <ComboBox Name="zainteresowania" >
                <ComboBoxItem Content="Technologia"></ComboBoxItem>
                        <ComboBoxItem Content="Sport"></ComboBoxItem>
                        <ComboBoxItem Content="Kultura"></ComboBoxItem>
                </ComboBox>
                
                <Button Content="Zatwierdz" Click="click"/>
                
                <Grid Name="SurveyGrid">
                
                <TextBlock Text="Odpowiedz na pytania:" FontWeight="Bold"></TextBlock>
                        
                        <StackPanel Name="pytania"></StackPanel>
                        
                        <Button Content="Zakoncz ankiete" Click="click"/>
                
                </Grid>
                
                <StackPanel Name="podsumowanie">
                
                <TextBlock Name="podsumowanie2"></TextBlock>
                        
                </StackPanel>
                
                
        </StackPanel>
    
        
</Window>
